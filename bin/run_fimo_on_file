#!/bin/bash

if [[ $# -ne 3 ]] ; then
    echo 'Arguments are sequence_file motifs_name motifs_file'
    exit 0
fi

script_directory=$(pwd)

sequence_file=$(basename $1)
sequence_file_name=${sequence_file%.*}
motifs_name=$2
motifs_file=$3

output_path=$script_directory/$sequence_file_name
mkdir $output_path &>/dev/null

pushd $output_path &>/dev/null

fimo -oc $output_path/$motifs_name --verbosity 1 $motifs_file $1 &>/dev/null

popd &>/dev/null

unset filename
unset global_path
unset script_directory